
entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libxcrypt", "postgresql"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py", "--mode=full"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "LuxOS v1.0.0 Stable"

[[workflows.workflow]]
name = "LuxOS Full System"
author = 43346420
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --mode=full --bootstrap"

