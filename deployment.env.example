
# LuxDB Deployment Configuration
# Copy to .env for local development

# Deployment Mode (development, staging, production)
LUXDB_MODE=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/luxdb
DATABASE_NAME=luxdb_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Discord Integration (optional)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_ADMIN_CHANNEL_ID=123456789

# OpenAI Integration (optional)
OPENAI_API_KEY=your_openai_api_key

# Security (production only)
SECRET_KEY=your_secret_key_here
FRONTEND_URL=https://your-frontend-domain.com

# Features
WORKSPACE_ENABLED=true
DISCORD_ENABLED=true
